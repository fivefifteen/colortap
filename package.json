{
  "name": "@kodie/colorfield",
  "version": "0.0.1",
  "description": "A tiny, dependency-free, color input field helper that utilizes the native color picker.",
  "keywords": [
    "color",
    "field",
    "hex",
    "html",
    "input",
    "javascript",
    "js",
    "no-jquery",
    "picker",
    "vanilla"
  ],
  "author": {
    "name": "Kodie Grantham",
    "email": "kodie.grantham@gmail.com",
    "url": "https://kodieg.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kodie/colorfield.git"
  },
  "bugs": {
    "url": "https://github.com/kodie/colorfield/issues"
  },
  "homepage": "https://kodie.github.io/colorfield",
  "main": "colorfield.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "cleancss --batch ./*.css --batch-suffix '.min' --output dist --debug --source-map",
    "build-js": "uglifyjs colorfield.js --comments /^!/ --compress --mangle --output dist/colorfield.min.js --source-map \"url='colorfield.min.js.map'\" --verbose",
    "test": "standard --env browser"
  },
  "devDependencies": {
    "clean-css-cli": "^5.3.3",
    "standard": "^11.0.1",
    "uglify-js": "^3.10.4"
  }
}
